{
    "collectCoverage": true,
    "coverageReporters": ["text"],
    "collectCoverageFrom": ["./lib/**/*.{ts,tsx,js,jsx}"],
    "roots": ["lib", "tests/unit"],
    "moduleFileExtensions": ["js", "json", "ts"],
    "testEnvironment": "node",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    }
}
